<% include _partials/header %>
  <% include _partials/messages %>

  <section class="reset">
    <h2>Reset your password</h2>
    <form id="reset-password-form" role="form" action="/reset/<%= token %>?_method=PUT" method="post">
      <div class="form-group">
        <label for="password">New Password</label> 
        <input class="form-control" type="password" name="password" value=""
               placeholder="New password" autofocus required>
      </div>
      <div class="form-group">
        <label for="confirm">Confirm Password</label> 
        <input class="form-control" type="password" name="confirm" value=""
               placeholder="Confirm password" autofocus required>
      </div>
      <div class="form-group">
        <button class="btn btn-default" type="submit">Reset</button>
      </div>
    </form>
  </section>

<% include _partials/footer %>
