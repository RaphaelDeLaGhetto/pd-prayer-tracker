<% include ../_partials/header %>
  <% include ../_partials/messages %>

  <article class="partner">
    <header>
      <h1><%= partner.name %></h1>
      <h2><%= partner.email %></h2>
    </header>
    <form id="edit-partner-form" role="form" action="/partner/<%= partner._id %>?_method=PUT" method="post">
      <input type="text" name="name" placeholder="<%= partner.name %>">
      <input type="email" name="email" placeholder="<%= partner.email %>">
      <input type="submit" value="Update">
    </form>
    <footer>
      <form id="delete-partner-form" role="form" action="/partner/<%= partner._id %>?_method=DELETE" method="post">
        <input type="submit" value="Delete">
      </form>
    </footer>
  </article>

<% include ../_partials/footer %>
